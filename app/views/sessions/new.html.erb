<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="mt-3">
        <h1>WELCOME TO COMPANY MANAGEMENTS</h1>
      </div>

      <div class="mt-3">
      <h2>Log in</h2>
      </div>

      <%= form_with(url: login_path, local: true) do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control",
                               placeholder: "Enter your email address" %>
        </div>

        <div class="form-group row mt-3">
          <%= form.label :password %>
          <%= form.password_field :password, class: "form-control",
                                  placeholder: "Enter your email address"%>
        </div>


        <div class="form-group row mt-3">
          <%= form.submit 'Đăng Nhập', class: "btn btn-primary" %>
        </div>

        <div class="form-group row mt-3">
        <%= link_to 'Đăng ký', sign_up_path, class: "btn btn-primary" %>
        </div>

        <%= form.label :remember_me, "Nhớ mật khẩu" %>
        <%= form.check_box :remember_me %>

        <div class="form-group row mt-3">
        <%= link_to "Quên mật khẩu?", forgot_password_path %>
        </div>

      <% end %>

    </div>
  </div>
</div>