<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="mt-3">

        <h1 class="centered-heading">MANAGEMENT</h1>
<style>
    h1 {
        text-align: center; /* Căn giữa nội dung của h1 */
        margin-top: 30px;   /* Khoảng cách từ đỉnh màn hình */
    }
</style>
      </div>
      <br>
      <br>


      <%= form_with(url: login_path, local: true) do |form| %>
        <div class="form-group row mt-3">
          <strong><%= form.label :email %></strong>
          <%= form.email_field :email, class: "form-control custom-border",
                               placeholder: "Enter your email address" %>
        </div>

        <div class="form-group row mt-3">
          <strong><%= form.label :password %></strong>
          <%= form.password_field :password, class: "form-control custom-border",
                                  placeholder: "Enter your password" %>
        </div>
<br>
        <%= form.label :remember_me, "Nhớ mật khẩu" %>
        <%= form.check_box :remember_me %>

        <div class="form-group row mt-3">
          <div class="col-sm-6 text-center">
            <%= form.submit 'Login', class: "btn btn-success btn-block" %> <!-- Sử dụng lớp btn-success để đổi màu sang xanh lá cây -->
          </div>
          <div class="col-sm-6 text-center">
            <%= link_to 'Sign up', sign_up_path, class: "btn btn-info btn-block" %> <!-- Sử dụng lớp btn-info để đổi màu sang xanh nước biển -->
          </div>
        </div>
<br>


        <div class="form-group row mt-3">
        <%= link_to "Quên mật khẩu?", forgot_password_path %>
        </div>

      <% end %>

    </div>
  </div>
</div>
<style>
    .custom-border {
        border-color: #007bff; /* Màu viền của trường */
    }

    .btn {
        width: 200px; /* Độ rộng của nút */
        height: 40px; /* Chiều cao của nút */
        margin: 0 auto; /* Căn giữa nút */
        display: block; /* Hiển thị dạng khối */
    }
</style>
