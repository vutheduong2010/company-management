<div class="container" xmlns="http://www.w3.org/1999/html">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="mt-3">
        <h1 class="centered-heading">SignUp</h1>
        <style>
            h1 {
                text-align: center; /* Căn giữa nội dung của h1 */
                margin-top: 30px;   /* Khoảng cách từ đỉnh màn hình */
            }
        </style>
      </div>



      <%= form_with model: @user, url: sign_up_path do |form| %>

        <div class="row mt-3">
          <div class="col-sm-12">
            <div class="form-group">
              <strong> <%=form.label :email, "Email" %></strong>
              <%= form.text_field :email, class: "form-control custom-border",
                                  placeholder: "Enter your email address" %>
            </div>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-sm-12">
            <div class="form-group">
              <strong><%= form.label :password, "Password" %></strong>
              <%= form.password_field :password, class: "form-control custom-border",
                                      placeholder: "Enter your password" %>
            </div>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-sm-12">
            <div class="form-group">
             <strong><%= form.label :password_confirmation, " Confirm password" %></strong>
              <%= form.password_field :password_confirmation, class: "form-control custom-border",
                                      placeholder: "Please enter the password again" %>
            </div>
          </div>
        </div>

        <div class="form-group row mt-3">
          <div class="col-sm-6 text-center">
            <%= form.submit "Register", class: "btn btn-success btn-block" %>
          </div>

          <div class="col-sm-6 text-center">
            <%= link_to 'Back', login_path, class: "btn btn-dark btn-block"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



<style>
    .custom-border {
        border-color: #007bff; /* Màu viền của trường */
    }

    .btn {
        width: 120px; /* Độ rộng của nút */
        height: 40px; /* Chiều cao của nút */
        margin: 0 auto; /* Căn giữa nút */
        display: block; /* Hiển thị dạng khối */
    }
</style>






