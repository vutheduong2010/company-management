<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="centered-content">
  <h1>Branches Managements</h1>
  <%= form_tag(branches_path, method: :get) do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Enter your branch code' %>
    <%= submit_tag 'Tìm Kiếm' %>
  <% end %>
  <table class="branch-table">
    <tr>
      <th>Code</th>
      <th>Branch Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Status</th>
      <th>Action</th>
    </tr>

    <% @branches.each do |branch| %>

      <tr <%= @ids&.include?(branch.id) ? 'active' : '' %>">
      <td class="center-text"><%=  branch.branch_code  %></td>
      <td class="center-text"><%=  branch.branch_name %></td>
      <td class="center-text"><%=  branch.email  %></td>
      <td class="center-text"><%=  branch.phone  %></td>
      <td class="center-text"><%=  branch.status  %></td>
      <td class="center-text"><%= link_to 'Detail', "/branches/#{branch.id}}" %></td>
      <td class="center-text"><%= button_to 'Delete', branch_path(branch), method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <div class="form-group row mt-3">
    <button><%= link_to 'ADD BRANCH', new_branch_path, class: "form-control" %></button>
  </div>
  <%= link_to 'Quay lại trang chủ', root_path %>
</div>
<style>
    table{
        background-color: aliceblue;
    }
    table,tr,th,td{
        padding: 10px;
        border: 1px solid black;
        border-collapse: collapse;
    }
    .centered-content {
        text-align: center;
    }
    .student-table {
        margin: 0 auto;
    }

</style>
