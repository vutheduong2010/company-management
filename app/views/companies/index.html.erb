<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="centered-content">
  <h1>Company Managements</h1>

  <table class="company-table">
    <tr>
      <th>Code</th>
      <th>Company Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Status</th>
      <th>Action</th>
    </tr>

    <% @companies.each do |company| %>

      <tr <%= @ids&.include?(student.id) ? 'active' : '' %>">
      <td class="center-text"><%=  company.company_code  %></td>
      <td class="center-text"><%=  company.company_name %></td>
      <td class="center-text"><%=  company.email  %></td>
      <td class="center-text"><%=  company.phone  %></td>
      <td class="center-text"><%=  company.status  %></td>
      <td class="center-text"><%= link_to 'Detail', "/company/#{company.id}" %></td>
      <td class="center-text"><%= button_to 'Delete', "/company/#{company.id}", method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'Quay lại trang chủ', root_path %>
</div>
  <style>
      table{
          background-color: aliceblue;
      }
      table,tr,th,td{
          padding: 10px;
          border: 1px solid black;
          border-collapse: collapse;
      }
      .centered-content {
          text-align: center;
      }
      .student-table {
          margin: 0 auto;
      }

  </style>