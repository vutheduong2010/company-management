<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="centered-content">
  <h1>Company Managements</h1>
  <%= form_tag(companies_path, method: :get) do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Enter your company code' %>
    <%= submit_tag 'Tìm Kiếm' %>
  <% end %>
  <table class="company-table">
    <tr>
      <th>Code</th>
      <th>Company Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Status</th>
      <th>Action</th>
    </tr>

    <% @companies.each do |company| %>

      <tr <%= @ids&.include?(company.id) ? 'active' : '' %>">
      <td class="center-text"><%=  company.company_code  %></td>
      <td class="center-text"><%=  company.company_name %></td>
      <td class="center-text"><%=  company.email  %></td>
      <td class="center-text"><%=  company.phone  %></td>
      <td class="center-text"><%=  company.status  %></td>
      <td class="center-text"><%= link_to 'Detail', "/companies/#{company.id}}" %></td>
      <td class="center-text"><%= button_to 'Delete', company_path(company), method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <div class="form-group row mt-3">
    <button><%= link_to 'ADD COMPANY', new_company_path, class: "form-control" %></button>
  </div>
  <%= link_to 'Quay lại trang chủ', root_path %>
</div>
  <style>
      table{
          background-color: aliceblue;
      }
      table,tr,th,td{
          padding: 10px;
          border: 1px solid black;
          border-collapse: collapse;
      }
      .centered-content {
          text-align: center;
      }
      .student-table {
          margin: 0 auto;
      }

  </style>