<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="mt-3">
<h1>Add Information Company</h1>
      </div>
<%= form_with(model: @company, url: companies_path,  method: :post, local: true) do |form| %>

        <div class="form-group row mt-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :company_code %></label>
    <%= form.text_field :company_code,  class:'form-control',
                        placeholder: "Enter your company code"%>
  </div>

        <div class="form-group row mt-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :company_name %></label>
    <%= form.text_field :company_name,  class:'form-control',
                        placeholder: "Enter your company name"%>
  </div>

        <div class="form-group row mt-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :address %></label>
    <%= form.text_field :address,  class:'form-control',
                        placeholder: "Enter your address"%>
  </div>

        <div class="form-group row mt-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :email %></label>
    <%= form.text_field :email,  class:'form-control',
                        placeholder: "Enter your email"%>
  </div>

        <div class="form-group row mt-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :phone %></label>
    <%= form.text_field :phone,  class:'form-control',
                        placeholder: "Enter your number phone"%>
  </div>

        <div class="form-group row mt-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :website %></label>
    <%= form.text_field :website,  class:'form-control',
                        placeholder: "Enter your website"%>
  </div>

        <div class="form-group row mt-3">
          <label for="exampleFormControlInput1" class="form-label"><%= form.label :status %></label>
          <%= form.text_field :status,  class:'form-control',
                              placeholder: "Enter your status"%>
        </div>


        <div class="form-group row mt-3">
  <%= form.submit 'Lưu', class:'form-control' %>
        </div>
<% end %>
      <div class="form-group row mt-3">
<%= link_to 'Quay lại', companies_path, class:'form-control' %>
    </div>
  </div>
</div>
</div>
