
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card mt-4">
        <div class="card-header">
          <h1 class="card-title">Information Division</h1>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>CODE:</strong> <%= @division.company_code %>
          </div>
          <div class="mb-3">
            <strong>NAME:</strong> <%= @division.company_name %>
          </div>
          <div class="mb-3">
            <strong>CODE:</strong> <%= @division.branch_code %>
          </div>
          <div class="mb-3">
            <strong>NAME:</strong> <%= @division.branch_name %>
          </div>
          <div class="mb-3">
            <strong>CODE:</strong> <%= @division.division_code %>
          </div>
          <div class="mb-3">
          <strong>NAME:</strong> <%= @division.division_name %>
          </div>
          <div class="mb-3">
            <strong>ADDRESS:</strong> <%= @division.address %>
          </div>
          <div class="mb-3">
            <strong>AREA:</strong> <%= @division.area %>
          </div>
          <div class="mb-3">
            <strong>EMAIL:</strong> <%= @division.email %>
          </div>
          <div class="mb-3">
            <strong>PHONE:</strong> <%= @division.phone %>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to 'Back', divisions_path, class: "btn btn-secondary me-2" %>
          <%= link_to 'Edit', edit_division_path(@division), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>






