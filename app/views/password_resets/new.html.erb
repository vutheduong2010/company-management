<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="mt-3">
        <h1> Forgot Password </h1>
      </div>

      <%= form_with(url: forgot_password_path, local: true) do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control",
                               placeholder: "Enter your email address" %>
        </div>

        <div class="form-group row mt-3">
          <%= form.submit 'Gửi Email Đặt Lại Mật Khẩu', class: "btn btn-primary"%>
        </div>

        <%= link_to "Quay lại", login_path %>
      <% end %>
    </div>
  </div>
</div>